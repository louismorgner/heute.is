{
    "version": 2,
    "env": {
        "ON_VERCEL": "true"
    },
    "builds": [
      {
        "src": "nuxt.config.js",
        "use": "@nuxtjs/vercel-builder"
      },
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {  "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/api", "dest": "api/index.js" },
      { "src": "/(.*)", "dest": "$1" }
  ]
}